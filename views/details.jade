extends layout

block content
  .movie-details
    h1= movie.title
    .movie-info
      img(src="https://image.tmdb.org/t/p/w220_and_h330_face/" + movie.poster_path, alt=movie.original_title)
      .movie-stats
        span
            i.fa.fa-star.text-warning 
            |  #{movie.vote_average}/10
        span 
            i.fa.fa-user-circle 
            |  #{movie.vote_count}
    p=movie.overview


.fas.fa-user-circle